// This is your ORM schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  nickname        String
  email           String            @unique
  password        String
  role            Role
  Deleted_posts   Deleted_posts[]
  Deleted_replyes Deleted_replyes[]
}

model Boards {
  id          Int    @id @default(autoincrement())
  tag         String
  name        String @db.VarChar(50)
  description String @db.Text
  posts       Post[]
}

model Post {
  id            Int            @id @default(autoincrement())
  title         String         @db.VarChar(50)
  text          String         @db.Text
  creation_time DateTime       @default(now())
  is_deleted    Boolean        @default(false)
  deleted_post  Deleted_posts?
  board_id      Int
  reply         Reply[]
  board         Boards         @relation(fields: [board_id], references: [id])
}

model Reply {
  id              Int              @id @default(autoincrement())
  title           String           @db.VarChar(50)
  text            String           @db.Text
  creation_time   DateTime         @default(now())
  is_deleted      Boolean          @default(false)
  reply_id        Int?
  reply_to        Reply?           @relation("ReplyToReply", fields: [reply_id], references: [id])
  replies         Reply[]          @relation("ReplyToReply")
  post_id         Int
  post            Post             @relation(fields: [post_id], references: [id])
  Deleted_replyes Deleted_replyes?
}

model Deleted_posts {
  post_id  Int  @id
  admin_id Int
  user     User @relation(fields: [admin_id], references: [id])
  post     Post @relation(fields: [post_id], references: [id])
}

model Deleted_replyes {
  reply_id Int   @id
  admin_id Int
  user     User  @relation(fields: [admin_id], references: [id])
  reply    Reply @relation(fields: [reply_id], references: [id])
}

enum Role {
  ADMIN
  SUPERADMIN
}
